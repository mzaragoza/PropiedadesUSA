              .testimonial-item
                .d-flex
                  %img.testimonial-img.flex-shrink-0{:alt => "", :src => "/assets/public/assets/img/testimonials/testimonials-2.jpg"}/
                  %div
                    %h3
                      = t('pages.testimonials.testimonial.name')
