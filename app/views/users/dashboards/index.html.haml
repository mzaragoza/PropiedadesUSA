      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.offer')
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.offer_description')
    %tr
      %td{ colspan: "2", style: "background-color: #f2f2f2; border: 1px solid black; padding: 8px; font-weight: bold;" }
        = t('users.dashboards.property_management')
    %tr
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.insurance')
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.insurance_description')
