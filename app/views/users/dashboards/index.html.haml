%table{ style: "border-collapse: collapse; border: 1px solid black; width: 100%; text-align: left;" }
  %thead
    %tr
      %th{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.service_type')
      %th{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.description')
  %tbody
    %tr
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.incorporating')
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.incorporating_description')
    %tr
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.bank')
      %td{ style: "border: 1px solid black; padding: 8px;" }
        = t('users.dashboards.bank_description')
