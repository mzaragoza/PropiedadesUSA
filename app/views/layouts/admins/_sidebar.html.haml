%ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
  / Sidebar - Brand
  %a.sidebar-brand.d-flex.align-items-center.justify-content-center{:href => users_root_path}
    .sidebar-brand-text.mx-3
      %img.img-fluid{:src => "/assets/general/logo.png", width: "100"}/
  / Divider
  %hr.sidebar-divider.my-0/
  / Nav Item - Dashboard
  %li.nav-item
    %a.nav-link{:href => users_root_path}
      %i.fas.fa-fw.fa-tachometer-alt
      %span= t('users.nav.dashboard')
  %li.nav-item
    = link_to '#', class: 'nav-link' do
      %i.fas.fa-fw.fa-cog
      %span= t('users.nav.link_1')
  / Divider
  %hr.sidebar-divider.d-none.d-md-block/
  / Sidebar Toggler (Sidebar)
  .text-center.d-none.d-md-inline
    %button#sidebarToggle.rounded-circle.border-0
